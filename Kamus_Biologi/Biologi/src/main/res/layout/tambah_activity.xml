<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/summer_generic">

    <TextView
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:text="EDIT KAMUS"
            android:id="@+id/textView3" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:background="@drawable/abc_textfield_activated_mtrl_alpha" android:gravity="center"
            android:textColor="#009900" android:textStyle="bold|italic"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp" android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/tableLayout">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="ISTILAH BIOLOGI"
                    android:id="@+id/textView4" android:layout_column="0" android:textColor="#990099"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/addIstilah" android:layout_column="0"
                    android:background="@drawable/abc_popup_background_mtrl_mult"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="ARTI ISTILAH"
                    android:id="@+id/textView5" android:layout_column="0" android:textColor="#990099"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <EditText
                    android:layout_width="220dp"
                    android:layout_height="100dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/addArti" android:layout_column="0"
                    android:background="@drawable/abc_popup_background_mtrl_mult"/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_below="@+id/tableLayout"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/tableLayout3">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnSimpanTambah" android:layout_column="0" android:background="@drawable/simpan"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     "
                    android:id="@+id/textView6" android:layout_column="1"/>
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnDeleteTambah" android:layout_column="2" android:background="@drawable/exit"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     "
                    android:id="@+id/textView9" android:layout_column="3"/>
            <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btnBackTambah" android:layout_column="4" android:background="@drawable/back"/>
        </TableRow>
    </TableLayout>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listDataKamus" android:layout_below="@+id/tableLayout3" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>