<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/summer_generic">

    <TextView
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:text="LOGIN"
            android:id="@+id/textView10" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:textColor="#009900" android:textStyle="bold|italic"
            android:background="@drawable/abc_textfield_activated_mtrl_alpha" android:gravity="center"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   "
            android:id="@+id/textView11" android:layout_below="@+id/textView10" android:layout_centerHorizontal="true"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp" android:layout_below="@+id/textView11"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/tableLayout5">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USER"
                    android:id="@+id/textView12" android:layout_column="0" android:textColor="#990099"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtUser" android:layout_column="1"
                    android:background="@drawable/abc_popup_background_mtrl_mult"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PASSWORD"
                    android:id="@+id/textView13" android:layout_column="0" android:textColor="#990099"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edtPass" android:layout_column="1"
                    android:background="@drawable/abc_popup_background_mtrl_mult"/>
        </TableRow>
    </TableLayout>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_below="@+id/tableLayout5"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="                        "
                android:id="@+id/textView14"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="LOGIN"
                android:id="@+id/btnLogin" android:textColor="#990000"
                android:gravity="center" android:background="#009900"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     "
                android:id="@+id/textView15"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="CANCEL"
                android:id="@+id/btnCancel" android:background="#999900"/>
    </TableRow>
</RelativeLayout>